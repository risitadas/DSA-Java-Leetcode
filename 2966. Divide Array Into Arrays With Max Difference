class Solution {
    public int[][] divideArray(int[] nums, int k) 
    {
        int n = nums.length;
        int[][] result = new int[n/ 3][3];

        Arrays.sort(nums);

        for (int i = 2; i <n; i += 3) 
        {
            if (nums[i] - nums[i - 2] > k)
            {
                return new int[0][];
            }
            
            result[i / 3] = new int[] {nums[i - 2], nums[i - 1], nums[i]};
        }

        return result;




        
    }
}
