class Solution {

    public void swap(int[] nums, int i, int j) 
    {
         int dummy = nums[i];
         nums[i] = nums[j];
         nums[j] = dummy;
    }

    public int firstMissingPositive(int[] nums) 
    {
        int n = nums.length;

        for (int i = 0; i < n; ++i)
        {
            while (nums[i] > 0 && nums[i] <= n && nums[i] != nums[nums[i] - 1])
            {
                swap(nums, i, nums[i] - 1);
            
            }
        }

        for (int i = 0; i < n; ++i)
        {
            if (nums[i] != i + 1)
            {
                return i + 1;
            }
        }

        return n + 1;


        
    }
}
