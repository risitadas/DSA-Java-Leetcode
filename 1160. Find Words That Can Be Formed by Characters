class Solution {

    public static boolean check(String s, int[] count)
    {
        int n=s.length();
        int[] ch = new int [26];
        for(int i = 0; i < n;i++)
        {
             int y = s.charAt(i)-'a';
             ch[y]++;

             if(ch[y] > count[y])
             {
                 return false;

             }
        }
        return true;
    }



    public int countCharacters(String[] words, String chars) 
    {
        int n = chars.length(), sum = 0;
        int count[] = new int[26];

        for(int i = 0; i < n;i++)
        {
            int x = chars.charAt(i) - 'a';
            count[x]++;
        }
      
        for(String s : words)
        {
            if(check(s,count))
            {
                sum += s.length();
            }
        }
        
        return sum;





        
    }
}
