class Solution {
    public int getLastMoment(int n, int[] left, int[] right) 
    {

        int time =0;

        for(int curr : left)
        {
            time = Math.max(time, curr);

        }

        for(int curr :right)
        {
            time = Math.max(time, n-curr);

        }

        return time;







        
    }
}
