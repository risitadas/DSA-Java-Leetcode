class Solution {
    public int[] twoSum(int[] numbers, int target) 
    {
        int n = numbers.length;
        int low = 0 , high = n-1;

        while (low < high)
        {
            int complement = numbers[low] + numbers[high];
            
            if (complement == target)
            {
                    return new int[]{low+1 , high+1};
            }
            else if (complement > target)
            {
                    high--;
            }
            else
            {
                    low++;
            }
        }
            
        return new int[] {-1 , -1};










        
        
    }
}
